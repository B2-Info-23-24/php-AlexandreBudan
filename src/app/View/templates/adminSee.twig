<div>
	<section class="py-5 text-center container">
		<div class="row py-lg-5">
			<div id="texte" class="col-lg-6 col-md-8 mx-auto">
				<h1 id="type1" class="fw-light">{{ type }}</h1>
			</div>
		</div>
	</section>
	<div id="data-container">
		{% if error is defined %}
			{{ type }}
			attribué à un véhicule, impossible de le supprimer.
		{% endif %}
		<p></p>
		<ul id="data-list">
			<form method="post" style="width:100%;">
				{% for one in data %}
					<div class="mini-box">
						{% if one.brandName is defined %}
							<h5>{{ one.brandName }}</h5>
							<button type="submit" name="supp" value="brand-{{ one.id }}">❌</button>
						{% elseif one.colorName is defined %}
							<h5>{{ one.colorName }}</h5>
							<button type="submit" name="supp" value="color-{{ one.id }}">❌</button>
						{% elseif one.number is defined %}
							<h5>{{ one.number }}</h5>
							<button type="submit" name="supp" value="passenger-{{ one.id }}">❌</button>
						{% endif %}
					</div>
					<p></p>
				{% endfor %}
			</form>
			<button class="btn-add" onclick="showSummaryModal()">Ajouter</button>
		</ul>
	</div>
	<div class="modal" id="summaryModal" tabindex="-1" role="dialog">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 id="type2" class="modal-title">Ajouter
						{{ type }}</h5>
				</div>
				<div class="modal-body">
					<input type="text" name"addvalue" id="summaryModalTitle" class="form-control" aria-describedby="basic-addon1" required>
				</div>
				{% if error is defined %}
					<p></p>
					{{ type }}
					déjà existant.
					<p></p>
				{% endif %}
				<div class="modal-footer">
					{% if data[0].brandName is defined %}
						<button type="submit" class="btn btn-secondary" data-dismiss="modal" name="add" onclick="closeSummaryModal()" value="brand">Ajouter</button>
					{% elseif data[0].colorName is defined %}
						<button type="submit" class="btn btn-secondary" data-dismiss="modal" name="add" onclick="closeSummaryModal()" value="color">Ajouter</button>
					{% elseif data[0].number is defined %}
						<button type="submit" class="btn btn-secondary" data-dismiss="modal" name="add" onclick="closeSummaryModal()" value="passenger">Ajouter</button>
					{% endif %}
					<button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="closeSummaryModal()">Fermer</button>
				</div>
			</div>
		</div>
	</div>
</div>
